{
    
    "configurations": [
        {
            "name": "debug echo_client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/boost_asio_bluetooth/echo_client",
            "args": ["A8:A7:95:23:02:D8"], // specify the server mac address here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "debug AudioStream speaker",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/AudioStream",
            "args": ["-s", "13"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "debug AudioStream recorder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/AudioStream",
            "args": ["-r", "-m", "A8:A7:95:23:02:D8", "-p", "13"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}